<div class="container">
	<% if params[:error] && params[:error] =="no_method" %>
		<div class="alert alert-danger">
			Please add a payment option before you continue.
		</div>
	<% end %>

	<div class="row">
		<div class="col-sm-6">
			<div id="stripe-error" class="alert alert-danger">
			</div>
			<%= form_tag("/payment_methods", id: "payment-method-form") do %>
				<input type="hidden" id="payment-token" name="payment_token" />
				<h1>Add a Payment Method</h1>

				<div class="bold margin-top-20">
					Full Name on Card
				</div>
				<div class="margin-top-10">
					<input id="card-name" type="text" class="form-control" />
				</div>

				<div class="bold margin-top-20">
					Credit Card Number
				</div>
				<div class="margin-top-10">
					<input id="card-number" type="tel" class="form-control" />
				</div>

				<div class="row margin-top-20">
					<div class="col-sm-4">
						<div class="bold">
							Exp. Month
						</div>
						<div class="margin-top-10">
							<select id="card-month" class="form-control">
								<option value="">Choose Month</option>
								<option value="01">01</option>
								<option value="02">02</option>
								<option value="03">03</option>
								<option value="04">04</option>
								<option value="05">05</option>
								<option value="06">06</option>
								<option value="07">07</option>
								<option value="08">08</option>
								<option value="09">09</option>
								<option value="10">10</option>
								<option value="11">11</option>
								<option value="12">12</option>
							</select>
						</div>
					</div>
					<div class="col-sm-4">
						<div class="bold">
							Exp. Year
						</div>
						<div class="margin-top-10">
							<select id="card-year" class="form-control">
								<option value="">Choose Year</option>
								<option value="2015">2015</option>
								<option value="2016">2016</option>
								<option value="2017">2017</option>
								<option value="2018">2018</option>
								<option value="2019">2019</option>
								<option value="2020">2020</option>
								<option value="2021">2021</option>
								<option value="2022">2022</option>
								<option value="2023">2023</option>
								<option value="2024">2024</option>
								<option value="2025">2025</option>
								<option value="2026">2026</option>
								<option value="2027">2027</option>
								<option value="2028">2028</option>
								<option value="2029">2029</option>
								<option value="2030">2030</option>
							</select>
						</div>
					</div>
					<div class="col-sm-4">
						<div class="bold">
							CVV
						</div>
						<div class="margin-top-10">
							<input id="card-cvv" type="tel" class="form-control" />
						</div>
					</div>
				</div>
				<div class="margin-top-20">
					<button id="submit-card" type="submit" class="btn btn-primary">
						Add Card
					</button>
				</div>
			<% end %>
		</div>
	</div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>

