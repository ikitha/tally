<div class="signup">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs well">
      <h2 class="signup">Sign up</h2>
      <%= f.input :email, required: true, autofocus: true %>
      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @validatable) %>
      <%= f.input :password_confirmation, required: true %>
      <div class="row">
        <div class="col-sm-6">
          <%= f.input :user_first_name, required: true %>
        </div>
        <div class="col-sm-6">
          <%= f.input :user_last_name, required: true %>
        </div>
      </div>
      <%= f.input :user_street_address, required: true %>
      <div class="row">
        <div class="col-sm-4">
          <%= f.input :user_city, required: true %>
        </div>
        <div class="col-sm-4">
          <%= f.input :user_zip, required: true %>
        </div>
        <div class="col-sm-4">
          <%= f.input :user_state, required: true %>
        </div>
      </div>
      <%= f.input :user_phone, required: true %>
      <%= f.input :occupation, required: true %>
      <%= f.input :employer_name, required: true %>
      <%= f.input :unemployed_or_retired, required: true, :as => :boolean %>

      <div class="form-actions signup">
        <%= f.button :submit, "Sign up" %>
      </div>
      <div class="signup">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  <% end %>
</div>